<?php

/**
 * Remove old wmcontroller cache tables
 */
function wmcontroller_update_8003()
{
    $schema = \Drupal::database()->schema();
    $tables = [
        'wmcontroller_cache',
        'wmcontroller_cache_tags',
    ];

    foreach ($tables as $table) {
        if ($schema->tableExists($table)) {
            $schema->dropTable($table);
        }
    }
}
